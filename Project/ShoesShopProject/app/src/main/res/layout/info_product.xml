<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffefe"
        android:orientation="vertical">
        <!--Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:ignore="MissingPrefix">

            <TextView

                style="@style/textOftoolbar"
                android:text="Thông tin sản phẩm" />

        </android.support.v7.widget.Toolbar>
        <!--ViewPage-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"

            />


        <LinearLayout
            android:id="@+id/SlidearDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/SlidearDots"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Màu:" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.9"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Size:" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1.4"
                android:gravity="center"
                />
        </LinearLayout>
<LinearLayout
    android:id="@+id/tenSp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:layout_below="@+id/size"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        android:text="Tên sản phẩm:" />

    <TextView
        android:id="@+id/tensanpham"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="#000"/>

</LinearLayout>
        <LinearLayout
            android:id="@+id/nhasx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/tenSp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhà sản xuất:" />

            <TextView
                android:id="@+id/nsx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/nhasx"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá bán:" />

            <TextView
                android:id="@+id/sells"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15dp"
                android:textColor="#da0c0c"/>


            <TextView
                android:id="@+id/cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#000"
                android:paddingLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xemthem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/gia"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Cửa hàng:" />

            <TextView
                android:id="@+id/nameshop_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#000"
                />

            <Button
                android:id="@+id/btnXemThem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Xem thêm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xemthem"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mô tả:" />

            <TextView
                android:id="@+id/motasp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:maxLines="5"
                android:scrollHorizontally="false"
                android:ellipsize="none"
                android:textColor="#000"
                android:text=""/>
        </LinearLayout>

        <Button
            android:id="@+id/btnBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="4"
            android:text="Xem bình luận" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viết bình luận:"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/edtBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:textColor="#000"
            android:hint="Nhập bình luận"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            />
        <ListView
            android:id="@+id/lvBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"></ListView>

        <Button
            android:id="@+id/btnBuyProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Mua ngay" />
    </LinearLayout>
</ScrollView>
</LinearLayout>