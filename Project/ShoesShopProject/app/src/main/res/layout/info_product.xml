<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffefe"
        android:orientation="vertical">
        <!--Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:ignore="MissingPrefix">

            <TextView
                style="@style/textOftoolbar"
                android:text="Thông tin sản phẩm" />
        </android.support.v7.widget.Toolbar>
        <!--ViewPage-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"

            />


        <LinearLayout
            android:id="@+id/SlidearDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/SlidearDots"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MS:" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="003"
                android:textColor="#000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size:" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:entries="@array/size_arrays"
                android:gravity="center"
                android:prompt="@string/filter_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nhasx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/size"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhà sản xuất:" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nike"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/nhasx"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá sản phẩm:" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.000.000 đ"
                android:textColor="#da0c0c"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá gốc" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="900.000 đ"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xemthem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/gia"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Cửa hàng:" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="MiuShop"
                android:textColor="#000"
                />

            <Button
                android:id="@+id/btnXemThem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Xem thêm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xemthem"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mô tả:" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Hình ảnh chỉ mang tinh chất minh họa, mua hay không tùy ý huynh"
                android:textColor="#000"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:text="Xem bình luận" />

        <Button
            android:id="@+id/btnBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Mua ngay" />
    </LinearLayout>
</ScrollView>