<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/anh"
    android:id="@+id/sign_up">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:ignore="MissingPrefix">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đăng ký"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />
            />
        </android.support.v7.widget.Toolbar>
    <!--main-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="Họ tên"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:text="Toàn"
            android:textColor="#000" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#000"
        android:text="xuantoan125@gmail.com"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:focusableInTouchMode="true"
        android:hint="Mật khẩu"
        android:imeActionId="@+id/login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="#000"
        tools:ignore="InvalidImeActionId"
        android:text="123456789"/>

        <EditText
            android:id="@+id/pre_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:focusableInTouchMode="true"
            android:hint="Nhập lại mật khẩu"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:text="123456789"
            android:textColor="#000"
            tools:ignore="InvalidImeActionId" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:hint="Số điện thoại"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#000"
        android:text="1023456789"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:hint="Địa chỉ"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#000"
        android:text="hcm"/>
        <EditText
            android:id="@+id/bank_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:hint="Tài khoản ngân hàng"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#000"
            android:text="711aa3835086"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/level_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="60dp"
            android:checked="true"
            android:text="Khách hàng" />
        <RadioButton
            android:id="@+id/level_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"/>
    </RadioGroup>

    <Button
        android:id="@+id/sign_up_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:background="#d0f7eb04"
        android:text="Đăng ký"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">


        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="#d11c248f"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Quên mật khẩu?"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

