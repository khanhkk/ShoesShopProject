<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7b4b4"
    android:orientation="vertical"
    android:id="@+id/product_filter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tlTabcontrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:id="@+id/tiAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:icon="@drawable/gender" />

            <android.support.design.widget.TabItem
                android:id="@+id/tiMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/woman"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tiWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/man"/>

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vpPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spin_name"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#000"
                    android:entries="@array/filter_name_arrays"
                    android:paddingRight="50dp"
                    android:prompt="@string/filter_name" />

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#d2d1d1"
                    android:elevation="2dp"
                    android:iconifiedByDefault="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

                <GridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"
                    android:padding="5dp"></GridView>
            </LinearLayout>

        </android.support.v4.view.ViewPager>

