<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingPrefix" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông tin tài khoản"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#fff"
            />
        />
    </android.support.v7.widget.Toolbar>
    <!--main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:background="@color/none"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="310dp"
            app:srcCompat="@mipmap/a2" />

        <ImageView
            android:id="@+id/imginfoclient"
            android:layout_width="360dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/avatar"
            />

        <TextView
            android:id="@+id/txtnameclient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="75dp"
            android:fontFamily="sans-serf"
            android:text="Nguyễn Xuân Toàn"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txtsdtclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 01675562567"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/txtemailclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: nguyenxuantoan125@gmail.com"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txtdcclient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Địa chỉ: 284 Cống Quỳnh - Phường Phạm Ngũ Lão - Quận 1 - TP. HCM" />

    </LinearLayout>
</LinearLayout>